---
import Email from "./icons/Email.astro";
import Github from "./icons/Github.astro";
import LinkedIn from "./icons/LinkedIn.astro";
import Phone from "./icons/Phone.astro";
import RedSocial from "./RedSocial.astro";
import Badge from "./Badge.astro";

// src/components/AboutSection.astro
interface Props {
	baseUrl: string;
}

const { baseUrl } = Astro.props;
---

<section id="about" class="py-16 text-center">
	<img
		src={`${baseUrl}/orlando.png`}
		alt="Avatar Orlando"
		class="w-32 h-32 rounded-full mx-auto mb-4 shadow-md border-4 border-orange-500 dark:border-orange-400"
	/>
	<h1 class="text-4xl font-extrabold tracking-tight">
		<span class="text-6xl text-orange-500 dark:text-orange-400">Or</span>lando
		<span class="text-6xl text-orange-500 dark:text-orange-400">Pi</span>neda
		<span class="text-6xl text-orange-500 dark:text-orange-400">Ra</span>ad
	</h1>
	<p class="text-lg text-amber-500 dark:text-amber-300 max-w-2xl mx-auto mb-6">
		Profesional en Tecnologías de la Información con más de 15 años de
		experiencia en gestión de sistemas, soporte técnico, bases de datos y
		desarrollo web moderno.
	</p>

	<!-- Botón para descargar CV -->
	<Badge text="Disponibilidad inmediata para trabajar" />
	<div class="mt-8 mb-6 flex items-center gap-4 justify-center">
		<a
			href={`${baseUrl}/CV_Orlando_Pineda_Raad.pdf`}
			download="CV_Orlando_Pineda_Raad.pdf"
			class="inline-flex items-center gap-3 bg-amber-500 hover:bg-amber-600 dark:bg-amber-600 dark:hover:bg-amber-700 text-white font-semibold px-6 py-3 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105"
		>
			<svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
				<path
					d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"
				></path>
			</svg>
			Descargar CV
		</a>
	</div>

	<div class="flex flex-wrap justify-center gap-4 sm:gap-6 mt-6 text-sm">
		<nav class="flex flex-wrap justify-center gap-2 sm:gap-x-4 mt-8">
			<RedSocial
				href="https://www.linkedin.com/in/orlando-pineda-raad-273402257/"
			>
				<LinkedIn class="size-4 sm:size-6" />
				<span class="hidden sm:inline">LinkedIn</span>
			</RedSocial>
			<RedSocial href="https://github.com/orpira">
				<Github class="size-4 sm:size-6" />
				<span class="hidden sm:inline">GitHub</span>
			</RedSocial>
			<RedSocial href="mailto:orpira@icloud.com">
				<Email class="size-4 sm:size-6" />
				<span class="hidden sm:inline">orpira@icloud.com</span>
			</RedSocial>
			<RedSocial>
				<Phone class="size-4 sm:size-6 text-yellow-400" />
				<span
					id="phone-text"
					class="text-xs sm:text-sm transition-opacity duration-300 inline-block min-w-[7.5rem] text-center"
					>+34 643 684 541</span
				>
			</RedSocial>
		</nav>

		<script>
			// Alternar entre el número y "Llámame..." cada 2 segundos
			document.addEventListener("DOMContentLoaded", () => {
				const phoneText = document.getElementById("phone-text");
				if (!phoneText) return;
				const number = "+34 643 684 541";
				const callMe = "Llámame...";
				let showingNumber = true;
				setInterval(() => {
					phoneText.style.opacity = "0";
					setTimeout(() => {
						phoneText.textContent = showingNumber ? callMe : number;
						phoneText.style.opacity = "1";
						showingNumber = !showingNumber;
					}, 300);
				}, 2000);
			});
		</script>
	</div>
</section>
