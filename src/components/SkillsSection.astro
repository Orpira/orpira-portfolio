---
// src/components/SkillsSection.astro
interface Props {
	baseUrl: string;
}

const { baseUrl } = Astro.props;
---

<section id="skills" class="py-16">
	<h2 class="text-5xl font-semibold mb-6 text-orange-500 text-center">
		Tecnologías y Herramientas
	</h2>

	<!-- Bases de Datos -->
	<div class="mb-8">
		<h3 class="text-lg font-semibold mb-4 text-amber-600 dark:text-amber-400">
			Bases de Datos
		</h3>
		<div class="grid grid-cols-2 sm:grid-cols-4 gap-6 justify-items-center">
			<div class="flex flex-col items-center">
				<img
					src={`${baseUrl}/postgresql-icon.svg`}
					alt="PostgreSQL"
					class="w-12 h-12 mb-2"
				/>
				<span class="text-sm">PostgreSQL</span>
			</div>
			<div class="flex flex-col items-center">
				<img
					src={`${baseUrl}/mysql-icon.svg`}
					alt="MySQL"
					class="w-12 h-12 mb-2"
				/>
				<span class="text-sm">MySQL</span>
			</div>
		</div>
	</div>

	<!-- Lenguajes de Programación -->
	<div class="mb-8">
		<h3 class="text-lg font-semibold mb-4 text-blue-600 dark:text-blue-400">
			Lenguajes de Programación
		</h3>
		<div class="grid grid-cols-2 sm:grid-cols-4 gap-6 justify-items-center">
			<div class="flex flex-col items-center">
				<img
					src={`${baseUrl}/java-icon.svg`}
					alt="Java"
					class="w-12 h-12 mb-2"
				/>
				<span class="text-sm">Java</span>
			</div>
			<div class="flex flex-col items-center">
				<img
					src={`${baseUrl}/javascript-icon.svg`}
					alt="JavaScript"
					class="w-12 h-12 mb-2"
				/>
				<span class="text-sm">JavaScript</span>
			</div>
			<div class="flex flex-col items-center">
				<img
					src={`${baseUrl}/typescriptlang-icon.svg`}
					alt="TypeScript"
					class="w-12 h-12 mb-2"
				/>
				<span class="text-sm">TypeScript</span>
			</div>
			<div class="flex flex-col items-center">
				<img
					src={`${baseUrl}/w3_html5-icon.svg`}
					alt="HTML"
					class="w-12 h-12 mb-2"
				/>
				<span class="text-sm">HTML</span>
			</div>
		</div>
	</div>

	<!-- Frameworks y Librerías -->
	<div class="mb-8">
		<h3 class="text-lg font-semibold mb-4 text-green-600 dark:text-green-400">
			Frameworks y Librerías
		</h3>
		<div class="grid grid-cols-2 sm:grid-cols-4 gap-6 justify-items-center">
			<div class="flex flex-col items-center">
				<img
					src={`${baseUrl}/reactjs-icon.svg`}
					alt="React"
					class="w-12 h-12 mb-2"
				/>
				<span class="text-sm">React</span>
			</div>
			<div class="flex flex-col items-center">
				<img
					src={`${baseUrl}/tailwindcss-icon.svg`}
					alt="Tailwind CSS"
					class="w-12 h-12 mb-2"
				/>
				<span class="text-sm">Tailwind CSS</span>
			</div>
			<div class="flex flex-col items-center">
				<img
					src={`${baseUrl}/laravel-icon.svg`}
					alt="Laravel"
					class="w-12 h-12 mb-2"
				/>
				<span class="text-sm">Laravel</span>
			</div>
		</div>
	</div>

	<!-- Herramientas y DevOps -->
	<div class="mb-8">
		<h3 class="text-lg font-semibold mb-4 text-purple-600 dark:text-purple-400">
			Herramientas y DevOps
		</h3>
		<div class="grid grid-cols-2 sm:grid-cols-4 gap-6 justify-items-center">
			<div class="flex flex-col items-center">
				<img
					src={`${baseUrl}/git-scm-icon.svg`}
					alt="Git"
					class="w-12 h-12 mb-2"
				/>
				<span class="text-sm">Git & GitHub</span>
			</div>
			<div class="flex flex-col items-center">
				<img
					src={`${baseUrl}/vitejsdev-icon.svg`}
					alt="Vite"
					class="w-12 h-12 mb-2"
				/>
				<span class="text-sm">Vite</span>
			</div>
			<div class="flex flex-col items-center">
				<img
					src={`${baseUrl}/linux-icon.svg`}
					alt="Linux"
					class="w-12 h-12 mb-2"
				/>
				<span class="text-sm">Linux</span>
			</div>
		</div>
	</div>
</section>
