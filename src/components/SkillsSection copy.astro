---
// src/components/SkillsSection.astro
interface Props {
	baseUrl: string;
}

const { baseUrl } = Astro.props;
---

<section id="skills" class="py-16">
	<h2 class="text-2xl font-semibold mb-10 text-center">
		Tecnologías y Herramientas
	</h2>
	<div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8 perspective">
		<!-- Bases de Datos -->
		<label class="relative block w-full h-64 cursor-pointer group perspective">
			<input type="checkbox" class="peer hidden" />
			<div
				class="relative w-full h-full transition-transform duration-500 transform-style-preserve-3d peer-checked:[transform:rotateY(180deg)]"
			>
				<div
					class="absolute w-full h-full backface-hidden bg-white dark:bg-zinc-800 rounded-xl shadow p-6 flex items-center justify-center"
				>
					<h3 class="text-lg font-semibold text-amber-600 dark:text-amber-400">
						Bases de Datos
					</h3>
				</div>
				<div
					class="absolute w-full h-full backface-hidden [transform:rotateY(180deg)] bg-amber-100 dark:bg-amber-900 text-zinc-800 dark:text-white rounded-xl shadow p-6 flex flex-col gap-3 items-center justify-center"
				>
					<div class="text-sm">PostgreSQL</div>
					<div class="text-sm">MySQL</div>
				</div>
			</div>
		</label>

		<!-- Programación -->
		<label class="relative block w-full h-64 cursor-pointer group perspective">
			<input type="checkbox" class="peer hidden" />
			<div
				class="relative w-full h-full transition-transform duration-500 transform-style-preserve-3d peer-checked:[transform:rotateY(180deg)]"
			>
				<div
					class="absolute w-full h-full backface-hidden bg-white dark:bg-zinc-800 rounded-xl shadow p-6 flex items-center justify-center"
				>
					<h3 class="text-lg font-semibold text-cyan-600 dark:text-cyan-400">
						Programación
					</h3>
				</div>
				<div
					class="absolute w-full h-full backface-hidden [transform:rotateY(180deg)] bg-cyan-100 dark:bg-cyan-900 text-zinc-800 dark:text-white rounded-xl shadow p-6 flex flex-col gap-3 items-center justify-center"
				>
					<div class="text-sm">Java</div>
					<div class="text-sm">JavaScript</div>
				</div>
			</div>
		</label>

		<!-- Frameworks -->
		<label class="relative block w-full h-64 cursor-pointer group perspective">
			<input type="checkbox" class="peer hidden" />
			<div
				class="relative w-full h-full transition-transform duration-500 transform-style-preserve-3d peer-checked:[transform:rotateY(180deg)]"
			>
				<div
					class="absolute w-full h-full backface-hidden bg-white dark:bg-zinc-800 rounded-xl shadow p-6 flex items-center justify-center"
				>
					<h3
						class="text-lg font-semibold text-purple-600 dark:text-purple-400"
					>
						Frameworks
					</h3>
				</div>
				<div
					class="absolute w-full h-full backface-hidden [transform:rotateY(180deg)] bg-purple-100 dark:bg-purple-900 text-zinc-800 dark:text-white rounded-xl shadow p-6 flex flex-col gap-3 items-center justify-center"
				>
					<div class="text-sm">React</div>
					<div class="text-sm">Tailwind CSS</div>
					<div class="text-sm">Astro</div>
				</div>
			</div>
		</label>

		<!-- DevOps -->
		<label class="relative block w-full h-64 cursor-pointer group perspective">
			<input type="checkbox" class="peer hidden" />
			<div
				class="relative w-full h-full transition-transform duration-500 transform-style-preserve-3d peer-checked:[transform:rotateY(180deg)]"
			>
				<div
					class="absolute w-full h-full backface-hidden bg-white dark:bg-zinc-800 rounded-xl shadow p-6 flex items-center justify-center"
				>
					<h3
						class="text-lg font-semibold text-indigo-600 dark:text-indigo-400"
					>
						DevOps
					</h3>
				</div>
				<div
					class="absolute w-full h-full backface-hidden [transform:rotateY(180deg)] bg-indigo-100 dark:bg-indigo-900 text-zinc-800 dark:text-white rounded-xl shadow p-6 flex flex-col gap-3 items-center justify-center"
				>
					<div class="text-sm">Linux</div>
					<div class="text-sm">Active Directory</div>
					<div class="text-sm">GitHub</div>
				</div>
			</div>
		</label>
	</div>
</section>
